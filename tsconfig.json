{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "components/map/Map.tsx", "components/RouteLayer.tsx", "components/map/Map.tsx", "app/layout.tsx", "app/page.jsx", "components/map/MapContainer.jsx", "components/microphone.jsx", "hooks/useVoiceRecorder.js", "hooks/useVoiceRecorder.js"],
  "exclude": ["node_modules"]
}
